{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
    ],
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
}